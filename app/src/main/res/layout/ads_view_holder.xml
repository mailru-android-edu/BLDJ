<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ads_holder"
        android:layout_width="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_height="wrap_content">

    <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/ad_name"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Объявление №15" />

    <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/ad_cost"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_name"
            android:layout_marginStart="12dp"
            android:text="Цена за машину 560 Р" />

    <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/ad_place"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_cost"
            android:layout_marginStart="12dp"
            android:text="Свободных мест 3" />

    <TextView
            android:id="@+id/ad_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_margin="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:text="Сегодня в 12:17" />


    <ImageButton
            android:layout_marginTop="24dp"
            android:id="@+id/ad_info_btn"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/info"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_corners"
            app:layout_constraintTop_toBottomOf="@id/ad_place"
            app:layout_constraintEnd_toStartOf="@id/ad_betraveler_btn"
            app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
            android:layout_marginTop="24dp"
            android:id="@+id/ad_betraveler_btn"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/add_user"
            android:scaleType="fitCenter"
            android:background="@drawable/button_corners"
            android:drawableLeft="@drawable/add_user"
            app:layout_constraintTop_toBottomOf="@id/ad_place"
            app:layout_constraintStart_toEndOf="@id/ad_info_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>